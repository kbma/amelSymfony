{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <h1>LIST ARTICLES</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Contenu</th>
                <th>DateCreation</th>
                <th>Autheur</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.titre }}</td>
                <td>{{ article.contenu }}</td>
                <td>{{ article.dateCreation ? article.dateCreation|date('Y-m-d') : '' }}</td>

                <td> {{ article.user.email}} </td>
                <td>
                    <a href="{{ path('app_article_show', {'id': article.id}) }}" class="btn btn-info">show</a>
                    <a href="{{ path('app_article_edit', {'id': article.id}) }}" class="btn btn-success">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_article_new') }}" class="btn btn-primary">Ajouter un article</a>
{% endblock %}
