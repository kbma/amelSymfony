{% extends 'base.html.twig' %}

{% block title %}Détails de l'Article{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4">Détails de l'Article</h1>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th scope="row">Id</th>
                        <td>{{ article.id }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Titre</th>
                        <td>{{ article.titre }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Contenu</th>
                        <td>{{ article.contenu }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Date de création</th>
                        <td>{{ article.dateCreation ? article.dateCreation|date('Y-m-d') : '' }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="d-flex justify-content-between">
        <a href="{{ path('app_article_index') }}" class="btn btn-primary">Retour à la liste</a>
        <a href="{{ path('app_article_edit', {'id': article.id}) }}" class="btn btn-success">Modifier</a>
        {{ include('article/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
